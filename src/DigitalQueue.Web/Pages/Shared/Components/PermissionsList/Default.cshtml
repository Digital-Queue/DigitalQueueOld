@model UserPermissionsDto

<div class="col-6 mt-lg-3">
    <p class="h5"><i class="fa fa-fw fa-keyboard m-1"></i>Permissions</p>
    @if (Model.Claims.Any())
    {
        @foreach (var claim in Model.Claims)
        {
        <div class="mt-3">
            <strong>@claim.Claim</strong>
            <ul class="list-group">
                @foreach (var value in claim.Values)
                {
                    <li class="list-group-item">@value</li>
                }
            </ul>
        </div>
        }
    }
    else
    {
        <i class="text-muted">No permissions assigned.</i>
    }
</div>

@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="container-md mt-lg-5">
    <div class="d-flex justify-content-center">
        <h4 class="text-capitalize">Sign In to access the dashboard</h4>
    </div>
    <div class="d-flex justify-content-center mb-4">
        <img class="d-flex align-self-center" src="~/welcome.png" width="25%" alt="welcome logo"/>
    </div>
    <div class="d-flex justify-content-center">
        <a class="btn btn-dark btn-primary btn-lg" asp-area="Accounts" asp-page="Login">
            <i class="fa fa-lg fa-door-open"></i>
            Sign In
        </a>
    </div>
</div>


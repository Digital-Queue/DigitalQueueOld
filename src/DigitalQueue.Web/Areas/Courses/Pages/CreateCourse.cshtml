@page "/courses/create"
@model CreateCourseModel

@{
    ViewData["Title"] = "Create New Course";
}

<div class="container-md mt-lg-5">
    <h2>Create Course</h2>
    
    <div class="d-flex justify-content-start">
        <form method="post">
            <div class="form-group mt-2">
                <label class="form-label" for="title">Course Title</label>
                <input type="text" asp-for="Title" class="form-control" id="title" placeholder="Ex: Geography">
            </div>
            <div class="form-group mt-2">
                <div class="text-danger" asp-validation-summary="All"></div>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-lg btn-success mt-lg-4">Create</button>
            </div>
        </form>
    </div>
</div>
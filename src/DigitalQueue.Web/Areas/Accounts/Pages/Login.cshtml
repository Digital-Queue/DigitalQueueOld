@page
@model LoginModel

@{
    ViewData["Title"] = "Sign in to administrator account";
}

<div class="container-md mt-lg-5">
    <div class="d-flex justify-content-center">
        <form method="post">
            <div class="form-group mt-2">
                <label class="form-label" for="email">Email address</label>
                <input type="email" asp-for="Email" class="form-control" id="email" placeholder="name@example.com">
            </div>
            <div class="form-group  mt-2">
                <label class="form-label" for="password">Password</label>
                <input type="password" asp-for="Password" class="form-control" id="password" >
            </div>
            <div class="form-check mt-2">
                <input type="checkbox" class="form-check-input" asp-for="RememberMe" checked id="remember-me">
                <label class="form-check-label" for="remember-me">
                    Remember Me
                </label>
            </div>
            <div class="form-group mt-2">
                <div class="text-danger" asp-validation-summary="All"></div>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-lg btn-success mt-lg-4">Sign In</button>
            </div>
        </form>
    </div>
</div>
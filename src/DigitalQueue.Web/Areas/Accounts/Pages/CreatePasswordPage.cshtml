@page
@model CreatePasswordPage

@{
    ViewData["Title"] = "Set Password";
}

<div class="container-md mt-lg-5">
    <div class="d-flex justify-content-center mb-5">
        <h2 class="text-capitalize text-lg-center">Create Password</h2>
    </div>
    <div class="d-flex justify-content-center">
        <div>
            <form method="post">
                <div class="form-group  mt-2">
                    <label class="form-label" for="newPassword">Password</label>
                    <input asp-for="Password" class="form-control" id="newPassword">
                </div>
                <div class="form-group  mt-2">
                    <label class="form-label" for="confirmNewPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" id="confirmNewPassword">
                </div>
                <div class="form-group mt-5">
                    <div class="text-danger" asp-validation-summary="All"></div>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-lg btn-success mt-lg-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>